<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.springbook.board.BoardMapper">
	<!-- CRUD 기준 정렬 -->
	<!-- 생성, 검색, 갱신, 삭제 -->
	<!-- resultType = returnType -->
	<!-- parameterType = 값을 가져오기 위한 것 -->
	
	<insert id="insBoard" parameterType="com.springbook.board.BoardVO">
		INSERT INTO t_board
		(title, ctnt)
		VALUES
		(#{title}, #{ctnt})
		<!-- #,$ 사용가능 # - 문자열이면 '' 숫자형 ''뺌 -->
		<!-- $는 그대로 찍음 -->
	</insert>
	
	<select id="selBoardList" resultType="com.springbook.board.BoardVO">
		SELECT i_board, title, r_dt FROM t_board
	</select>
	
	<select id="selBoard" resultType="com.springbook.board.BoardVO" 
	parameterType="com.springbook.board.BoardVO">
		SELECT i_board, title, ctnt, r_dt 
		FROM t_board 
		WHERE i_board=#{i_board}
	</select>
	
	<update id="boardUpd" parameterType="com.springbook.board.BoardVO">
		UPDATE t_board
		SET	title=#{title}, ctnt=#{ctnt}
		WHERE i_board=#{i_board}
	</update>
	
	<delete id="boardDel" parameterType="int">
		DELETE FROM t_board
		WHERE i_board=#{param}
	</delete>
	
</mapper>
